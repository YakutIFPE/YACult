//Configuração de Distancia Mínima em centimetros
const int distanciaInicial = 0;
const int distanciaFinal = 10; 

//Configurações de Portas do Arduino

//Sensor
const int TRIG = 3;
const int ECHO = 2;

// Variaveis para funcionamento do Buzzer


const int buzzer = 9;
int frequencia;

void setup() {
  Serial.begin(9600);
  
  // Configurações do Sensor
  pinMode(TRIG,OUTPUT);
  pinMode(ECHO,INPUT);

  //Configurações do Buzzer
  pinMode(buzzer, OUTPUT); 
  
}

void loop() {
  //int distancia = sensorGato(TRIG,ECHO);

    if(distanciaInicial <= distanciaFinal){
      tocaBuzzer();
    }
    else{
      noTone(buzzer);
      delay(1);
    }
}

int sensorGato(int pinotrig,int pinoecho){
  digitalWrite(pinotrig,LOW);
  delayMicroseconds(100);
  digitalWrite(pinotrig,HIGH);
  delayMicroseconds(10);
  digitalWrite(pinotrig,LOW);

  return pulseIn(pinoecho,HIGH);
}

//Função para execução do Alarme Sonoro
void tocaBuzzer(){
 for(int i=0;i <= distanciaFinal;i++){
  //seno=(sin(x*3.1416/180));
  frequencia = 200 /*+(int(seno*1000))*/;
  tone(buzzer,frequencia);
  delay(0);
}

}
